#include <cstring> // Para la funci√≥n strlen

using namespace std;

int main() {
    char cadena[] = "Hola, Mundo!";

    // Calcular la longitud de la cadena usando strlen()
    int longitud = strlen(cadena);

    // Mostrar el resultado
    cout << "La longitud de la cadena es: " << longitud << endl;

    return 0;
}
