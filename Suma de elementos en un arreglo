  GNU nano 7.2                                           ProAct33.cpp                                                     #include <iostream>
using namespace std;

int main() {
    int n;

    // Solicitar al usuario el tamaño del arreglo
    cout << "Introduce el número de elementos del arreglo: ";
    cin >> n;

    int arreglo[n];  // Declaramos el arreglo

    // Solicitar al usuario que ingrese los elementos del arreglo
    cout << "Introduce los " << n << " elementos del arreglo: " << endl;
    for (int i = 0; i < n; i++) {
        cin >> arreglo[i];
    }

    // Sumar los elementos del arreglo
    int suma = 0;
    for (int i = 0; i < n; i++) {
        suma += arreglo[i];  // Sumar cada elemento del arreglo
    }

    // Mostrar el resultado
    cout << "La suma de los elementos del arreglo es: " << suma << endl;

    return 0;
}
