using namespace std;

int encontrarMaximo(int arreglo[], int n) {
    int maximo = arreglo[0];  // Inicializamos el m치ximo con el primer elemento del arreglo
    for (int i = 1; i < n; i++) {
        if (arreglo[i] > maximo) {
            maximo = arreglo[i];  // Actualizamos el m치ximo si encontramos un valor mayor
        }
    }
    return maximo;
}

int main() {
    int n;

    cout << "Introduce el tama침o del arreglo: ";
    cin >> n;

    int arreglo[n];

    cout << "Introduce los elementos del arreglo:" << endl;
    for (int i = 0; i < n; i++) {
        cin >> arreglo[i];
    }
    int maximo = encontrarMaximo(arreglo, n);
    cout << "El valor m치ximo en el arreglo es: " << maximo << endl;

    return 0;
}
